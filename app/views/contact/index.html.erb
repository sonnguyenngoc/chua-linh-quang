<div class="pageWrapper">
    
    <!-- Header Start -->
    <%= render "/home/header" %>
    <!-- Header End -->
    
    <!-- Content Start -->
    <div id="contentWrapper">
        <div class="page-title title-1">
            <div class="container">
                <div class="row">
                    <div class="cell-12">
                        <h1 class="fx" data-animate="fadeInLeft">LIÊN HỆ</h1>
                        <div class="breadcrumbs main-bg fx" data-animate="fadeInUp">
                            <%= link_to "Trang Chủ", root_path %><span class="line-separate">/</span><span>Liên Hệ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="padd-top-50">
            <div class="container">
                <div class="row">
                    <div class="cell-7 contact-form fx" data-animate="fadeInLeft" id="contact">
                        <h3 class="block-head">Gửi lời nhắn</h3>
                        <mark id="message"></mark>
                        <form class="form-signin cform">
                            
                            <div class="form-input">
                                <label>Họ & Tên<span class="red">*</span></label>
                                <input type="text" name="name" id="name" required="required">
                            </div>
                            
                            <div class="form-input">
                                <label>Phone<span class="red">*</span></label>
                                <input name="phone" type="text" id="phone">			    						
                            </div>
                            
                            <div class="form-input">
                                <label>Email</label>
                                <input name="email" type="email" id="email" required="required">
                            </div>
                            
                            <div class="form-input">
                                <label>Địa chỉ</label>
                                <input type="text" name="name" id="name" required="required">
                            </div>
                            
                            <div class="form-input">
                                <label>Đơn vị</label>
                                <input type="text" name="name" id="name" required="required">
                            </div>
                            
                            <div class="form-input">
                                <label>Lời nhắn<span class="red">*</span></label>
                                <textarea name="message" cols="40" rows="7" id="messageTxt" required="required"></textarea>
                            </div>
                            
                            <div  class="form-input">
                                <div class="row">
                                    <div class="cell-12 margin-bottom-20">Recaptcha</div>
                                </div>
                            </div>
                            
                            <div class="form-input">
                                <input id="submit" name="submit" type="submit" class="btn btn-large main-bg" value="Submit">&nbsp;&nbsp;<input type="reset" class="btn btn-large" value="Nhập lại" id="reset">
                            </div>

                        </form>
                    </div>
                    <div class="cell-5 contact-detalis">
                        <h3 class="block-head">Thông tin liên hệ</h3>
                        <div class="padding-vertical">
                            <div class="cell-12 fx" data-animate="fadeInRight">
                                <h4 class="main-color bold">CHÙA LINH QUANG</h4>
                                <p><i class="fa fa-home"></i>  Ấp 1, Xã Phú Hòa, Huyện Định Quán, Tỉnh Đồng Nai, Việt Nam</p>
                                <p><i class="fa fa-phone"></i>  0613 629 057</p>
                                <p><i class="fa fa-envelope"></i>  <a href="mailto:hopthu@chualinhquang.com.vn">hopthu@chualinhquang.com.vn</a></p>
                                <p><i class="fa fa-globe"></i>  <a>http://chualinhquang.com.vn/</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="padd-vertical-45">
            <div class="container">
                    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
                    <div id="map_canvas" style="height: 450px; width: 100%;">
                    <script type="text/javascript"> 
                        function init_map(){
                            var myOptions = {zoom:16,center:new google.maps.LatLng(11.213999, 107.425795),
                            mapTypeId: google.maps.MapTypeId.ROADMAP};
                            map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
                            marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(11.213999, 107.425795)});
                            infowindow = new google.maps.InfoWindow({content:"<div class='noScroll'><h3>Chùa Linh Quang</h3>Ấp 1, Xã Phú Hòa, Huyện Định Quán, Tỉnh Đồng Nai, Việt Nam<br/><br/>Điện thoại: 0613 629 057<br/><br/><a href='mailto:hopthu@chualinhquang.com.vn'>hopthu@chualinhquang.com.vn</a></div>" });
                            google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});
                            infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);
                    </script>
                </div>
        </div>
        
    </div>
    <!-- Content End -->
    
    <!-- Footer start -->
    <%= render "/home/footer" %>
    <!-- Footer end -->
    
    <!-- Back to top Link -->
