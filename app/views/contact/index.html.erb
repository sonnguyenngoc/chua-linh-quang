<!-- site preloader start -->
<div class="page-loader">
    <div class="loader-in"></div>
</div>
<!-- site preloader end -->

<div class="pageWrapper">
    
    <!-- Header Start -->
    <%= render "/home/header" %>
    <!-- Header End -->
    
    <!-- Content Start -->
    <div id="contentWrapper">
        <div class="page-title title-1">
            <div class="container">
                <div class="row">
                    <div class="cell-12">
                        <h1 class="fx" data-animate="fadeInLeft">LIÊN HỆ</h1>
                        <div class="breadcrumbs main-bg fx" data-animate="fadeInUp">
                            <%= link_to "Trang Chủ", root_path %><span class="line-separate">/</span><span>Liên Hệ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="padd-top-50">
            
            <div class="container">
                
                <div class="row">
                    
                    <div class="cell-7 contact-form fx" data-animate="fadeInLeft" id="contact">
                        
                        <h3 class="block-head">Gửi lời nhắn</h3>
                        
                        <%= form_for @contact, html: {class: "form-signin cform", id: "contact_form_validate"} do |f| %>
                            
                            <div class="form-input">
                                <label>Họ & Tên<span class="red">*</span></label>
                                <%= f.text_field :name, class: "required" %>
                            </div>
                            
                            <div class="form-input">
                                <label>Phone<span class="red">*</span></label>
                                <%= f.text_field :phone, class: "required" %>				
                            </div>
                            
                            <div class="form-input">
                                <label>Email<span class="red">*</span></label>
                                <%= f.email_field :email, class: "required email" %>
                            </div>
                            
                            <div class="form-input">
                                <label>Địa chỉ</label>
                                <%= f.text_field :address %>
                            </div>
                            
                            <div class="form-input">
                                <label>Đơn vị</label>
                                <%= f.text_field :unit %>
                            </div>
                            
                            <div class="form-input">
                                <label>Lời nhắn<span class="red">*</span></label>
                                <%= f.text_area :message, rows: '7', class: "required" %>
                            </div>
                            
                            <div  class="form-input">
                                <div class="row">
                                    <div class="cell-12 margin-bottom-20">Recaptcha</div>
                                </div>
                            </div>
                            
                            <div class="form-input">
                                <button type="submit" class="btn btn-large main-bg"><i class="fa fa-paper-plane"></i> Gửi lời nhắn</button>&nbsp;&nbsp;<input type="reset" class="btn btn-large" value="Nhập lại" id="reset">
                            </div>

                        <% end %>
                    </div>
                    
                    <div class="cell-5 contact-detalis">
                        <h3 class="block-head">Thông tin liên hệ</h3>
                        <div class="padding-vertical">
                            <div class="cell-12 fx" data-animate="fadeInRight">
                                <h4 class="main-color bold"><%= @info.name %></h4>
                                <p><i class="fa fa-home"></i>  <%= @info.head_office_address %></p>
                                <p><i class="fa fa-phone"></i>  <%= @info.phone %></p>
                                <p><i class="fa fa-envelope"></i>  <a href="mailto:<%= @info.email %>"><%= @info.email %></a></p>
                                <p><i class="fa fa-globe"></i>  http://chualinhquang.com.vn/</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="padd-vertical-45">
            <div class="container">
                    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
                    <div id="map_canvas" style="height: 450px; width: 100%;">
                    <script type="text/javascript"> 
                        function init_map(){
                            var myOptions = {zoom:16,center:new google.maps.LatLng(11.213999, 107.425795),
                            mapTypeId: google.maps.MapTypeId.ROADMAP};
                            map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
                            marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(11.213999, 107.425795)});
                            infowindow = new google.maps.InfoWindow({content:"<div class='noScroll'><h3><%= @info.name %></h3><%= @info.head_office_address %><br/><br/>Điện thoại: <%= @info.phone %><br/><br/><a href='mailto:<%= @info.email %>'><%= @info.email %></a></div>" });
                            google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});
                            infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);
                    </script>
                </div>
        </div>
        
    </div>
    <!-- Content End -->
    
    <!-- Footer start -->
    <%= render "/home/footer" %>
    <!-- Footer end -->
    
    <!-- Back to top Link -->
    <div id="to-top" class="main-bg"><span class="fa fa-chevron-up"></span></div>

</div>

<%= render "/home/js_files" %>

<!-- Contact us js file -->
<%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>
<script>
    $(document).ready(function(){
        $("#contact_form_validate").validate();
    });
</script>
