<div class="panel panel-body login-form">
    <div class="text-center">
        <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
        <h5 class="content-group">Đăng Nhập Tài Khoản <small class="display-block">Chùa Linh Quang</small></h5>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control required", placeholder: "Địa chỉ email..." %>
      </div>
      
      <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control required", placeholder: "Mật khẩu..." %>
      </div>
      
      <div class="form-group">
          <%= button_tag 'Đăng nhập <i class="icon-circle-right2 position-right"></i>'.html_safe, class: "btn btn-primary btn-block actions"%>
      </div>
    <% end %>
</div>