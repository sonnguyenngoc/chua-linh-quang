<section class="block-wrapper">
  <div class="container">
    <div class="row">

      <div class="col-md-2 col-sm-0">

        <!-- left sidebar -->
        <%= render "/modules/left_sidebar" %>
        <!-- End left sidebar -->

      </div>

      <div class="col-md-7 col-sm-8">

        <!-- block content -->
        <div class="block-content">

          <!-- grid box -->
          <div class="grid-box">
            <div class="title-section">
              <h1><span class="category_5">Thư Viện Video</span></h1>
            </div>
            <div class="row">
              <% @videos.each_with_index do |item,index| %>
                <div class="col-md-6">
                    <div class="news-post video-post">
                        <%= image_tag item.image_url.medium_image, alt: "" %>
                        <a href="<%= item.link %>" class="video-link"><i class="fa fa-play-circle-o"></i></a>
                        <div class="hover-box">
                            <h2><%= item.title %></h2>
                            <ul class="post-tags">
                                <li><i class="fa fa-clock-o"></i><%= item.created_at.strftime("%d/%m/%Y") %></li>
                            </ul>
                        </div>
                    </div>
                </div>
              <%= '</div><div class="row">'.html_safe if index%2 == 1 %>
              <% end %>
            </div>

          </div>
          <!-- End grid box -->

          <!-- pagination box -->
          <div class="pagination-box">
            <%= will_paginate @videos, previous_label: 'Trang trước', next_label: 'Trang sau', renderer: BootstrapPagination::Rails %>
            <% if @videos.count > 14 %><br><br><p><%= page_entries_info @videos %></p><% else %><p><%= page_entries_info @videos %></p><% end %>
          </div>
          <!-- End Pagination box -->

        </div>
        <!-- End block content -->

      </div>

      <div class="col-md-3 col-sm-4">

        <!-- right sidebar -->
        <%= render "/modules/right_sidebar" %>
        <!-- End right sidebar -->

      </div>

    </div>

  </div>
</section>