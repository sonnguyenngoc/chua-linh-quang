<section class="block-wrapper">
  <div class="container">
    <div class="row">

      <div class="col-md-2 col-sm-0">

        <!-- left sidebar -->
        <%= render "/modules/left_sidebar" %>
        <!-- End left sidebar -->

      </div>

      <div class="col-md-7 col-sm-8">

        <!-- block content -->
        <div class="block-content">

          <!-- grid box -->
          <div class="grid-box">
            <div class="title-section">
              <h1><span class="<%= @category.style %>"><%= @category.name %></span></h1>
            </div>
            <div class="row">
              <% @posts.each_with_index do |item,index| %>
              <div class="col-md-6">
                <div class="news-post image-post2">
                  <div class="post-gallery">
                    <%= image_tag item.image_url.medium_image, alt: "" %>
                    <div class="hover-box">
                      <div class="inner-hover">
                        <%= link_to @category.name, category_path(category_id: @category, category_name: @category.url_friendly), class: "category-post world" %>
                        <h2><%= link_to item.title, post_detail_path(category_id: @category, category_name: @category.url_friendly, post_id: item.id, post_name: item.url_friendly) %></h2>
                        <ul class="post-tags">
                          <li><i class="fa fa-clock-o"></i><%= item.created_at.strftime("%d/%m/%Y") %></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="post-content">
                    <p class="text-justify"><%= truncate(strip_tags(item.content.html_safe), length: 90) %></p>
                  </div>
                </div>
              </div>
              <%= '</div><div class="row">'.html_safe if index%2 == 1 %>
              <% end %>
            </div>

          </div>
          <!-- End grid box -->

          <!-- pagination box -->
          <div class="pagination-box">
            <%= will_paginate @posts, previous_label: 'Trang trước', next_label: 'Trang sau', renderer: BootstrapPagination::Rails %>
            <p><%= page_entries_info @posts %></p>
          </div>
          <!-- End Pagination box -->

        </div>
        <!-- End block content -->

      </div>

      <div class="col-md-3 col-sm-4">

        <!-- right sidebar -->
        <%= render "/modules/right_sidebar" %>
        <!-- End right sidebar -->

      </div>

    </div>

  </div>
</section>