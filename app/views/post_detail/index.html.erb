<section class="block-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-sm-8">

          <!-- block content -->
          <div class="block-content">

            <!-- single-post box -->
            <div class="single-post-box">

                <div class="title-post">
                  <h1><% if @post_detail.is_mine == true %><strong><%= link_to "(LQT)", root_path %></strong> <% end %> <%= @post_detail.title %></h1>
                  <ul class="post-tags">
                    <li><i class="fa fa-clock-o"></i><%= @post_detail.posted_at.strftime("%d/%m/%Y") %></li>
                    <li><i class="fa fa-user"></i>bởi Chùa Linh Quang</li>
                  </ul>
                </div>
  
                <div class="post-gallery">
                  <%= image_tag @post_detail.image_url.larger_image, alt: "" %>
                  <span class="image-caption"><%= @post_detail.title %></span>
                </div>
  
                <div class="post-content text-justify">
  
                    <%= @post_detail.content.html_safe %>
                  
                </div>
  
                <div class="post-tags-box">
                  <ul class="tags-box">
                    <li><i class="fa fa-tags"></i><span>Chuyên mục:</span></li>
                    <li><%= link_to "Chùa Linh Quang", root_path %></li>
                    <li><%= link_to @category.name, category_path(category_id: @category, category_name: @category.url_friendly) %></li>
                  </ul>
                </div>
  
                <!-- carousel box -->
                <div class="carousel-box owl-wrapper">
                  <div class="title-section">
                    <h1><span>Tin liên quan</span></h1>
                  </div>
                  <div class="owl-carousel" data-num="3">
                    <% @related_posts.each do |item| %>
                    <div class="item news-post image-post3">
                      <%= image_tag item.image_url.smallest_image, alt: "" %>
                      <div class="hover-box">
                        <h2><%= link_to item.title, post_detail_path(category_id: @category, category_name: @category.url_friendly, post_id: item.id, post_name: item.url_friendly) %></h2>
                        <ul class="post-tags">
                          <li><i class="fa fa-clock-o"></i><%= item.posted_at.strftime("%d/%m/%Y") %></li>
                        </ul>
                      </div>
                    </div>
                    <% end %>
                  </div>
                </div>
                <!-- End carousel box -->

            </div>
            <!-- End single-post box -->

          </div>
          <!-- End block content -->

        </div>

        <div class="col-sm-4">

          <!-- sidebar -->
          <%= render "/modules/post_detail_sidebar" %>
          <!-- End sidebar -->

        </div>

      </div>

    </div>
  </section>