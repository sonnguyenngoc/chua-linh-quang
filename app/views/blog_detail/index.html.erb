                            <div class="post-item fx" data-animate="fadeInLeft">
                                <div class="details-img">
                                    <div class="post-lft-info">
                                        <div class="main-bg"><%= @blog_detail.created_at.strftime("%d") %><br><%= @blog_detail.created_at.strftime("%m") %><br><%= @blog_detail.created_at.strftime("%Y") %><span class="tri-col"></span></div>
                                    </div>
                                    <img src="<%= @blog_detail.image_url.big_image %>" alt="<%= @blog_detail.title %>">
                                </div>
                                <article class="post-content">
                                    <div class="post-info-container">
                                        <h1 class="main-color"><%= @blog_detail.title %></h1>
                                        
                                        <div class="post-info">
                                            <ul class="post-meta">
                                                <li class="meta-user"><i class="fa fa-user"></i> <a href="#">Chùa Linh Quang</a></li>
                                                <li><i class="fa fa-folder-open"></i> <a href="#">Văn Học - Nghệ Thuật</a></li>
                                                <li class="meta-comments"><i class="fa fa-comments"></i> <a href="#">5</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="text-justify">
                                        <%= @blog_detail.content.html_safe %>
                                    </div>
                                </article>
                            </div><!-- .post-item end -->
                            <div class="comments">
