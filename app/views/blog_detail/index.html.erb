<div class="page-loader">
    <div class="loader-in"></div>
</div>
<!-- site preloader end -->

<div class="pageWrapper">

    <!-- Header Start -->
    <%= render "/home/header" %>
    <!-- Header End -->
    
    <!-- Content Start -->
    <div id="contentWrapper">
        <div class="page-title title-1">
            <div class="container">
                <div class="row">
                    <div class="cell-12">
                        <h1 class="fx" data-animate="fadeInLeft"><%= @blog_detail.title %></h1>
                        <div class="breadcrumbs main-bg fx" data-animate="fadeInUp">
                            <%= link_to "Trang Chủ", root_path %><span class="line-separate">/</span><%= link_to "Văn Hóa", cultural_path %><span class="line-separate">/</span><%= link_to "Văn Học - Nghệ Thuật", cultural_sub_2_path %><span class="line-separate">/</span><span><%= @blog_detail.title %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="sectionWrapper">
            <div class="container">
                <div class="row">
                    <div class="cell-9">
