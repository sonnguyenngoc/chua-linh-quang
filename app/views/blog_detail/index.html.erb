<!-- site preloader start -->
<div class="page-loader">
    <div class="loader-in"></div>
</div>
<!-- site preloader end -->

<div class="pageWrapper">

    <!-- Header Start -->
    <%= render "/home/header" %>
    <!-- Header End -->
    
    <!-- Content Start -->
    <div id="contentWrapper">
        <div class="page-title title-1">
            <div class="container">
                <div class="row">
                    <div class="cell-12">
                        <h1 class="fx" data-animate="fadeInLeft"><%= @blog_detail.title %></h1>
                        <div class="breadcrumbs main-bg fx" data-animate="fadeInUp">
                            <%= link_to "Trang Chủ", root_path %><span class="line-separate">/</span><%= link_to "Chi Tiết Bài Viết", root_path %><span class="line-separate">/</span><span><%= @blog_detail.title %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="sectionWrapper">
            <div class="container">
                <div class="row">
                    <div class="cell-9">
                         <div class="blog-posts">
                            <div class="post-item fx" data-animate="fadeInLeft">
                                <div class="details-img">
                                    <div class="post-lft-info">
                                        <div class="main-bg"><%= @blog_detail.created_at.strftime("%d") %><br><%= @blog_detail.created_at.strftime("%m") %><br><%= @blog_detail.created_at.strftime("%Y") %><span class="tri-col"></span></div>
                                    </div>
                                    <img src="<%= @blog_detail.image_url.big_image %>" alt="<%= @blog_detail.title %>">
                                </div>
                                <article class="post-content">
                                    <div class="post-info-container">
                                        <h1 class="main-color"><%= @blog_detail.title %></h1>
                                        
                                        <div class="post-info">
                                            <ul class="post-meta">
                                                <li class="meta-user"><i class="fa fa-user"></i> <a href="#">Chùa Linh Quang</a></li>
                                                <li><i class="fa fa-folder-open"></i> <a href="#">Văn Học - Nghệ Thuật</a></li>
                                                <li class="meta-comments"><i class="fa fa-comments"></i> <a href="#">5</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="text-justify">
                                        <%= @blog_detail.content.html_safe %>
                                    </div>
                                </article>
                            </div><!-- .post-item end -->
                        </div>
                    </div>
                    
                    <!-- right side bar -->
                    <aside class="cell-3 right-sidebar">
                        
                        <%= render "/home/right_side_bar" %>
                        
                    </aside>
                    
                </div>
            </div>
        </div>
        
    </div>
    <!-- Content End -->
    
    <!-- Footer start -->
    <%= render "/home/footer" %>
    <!-- Footer end -->
    
    <!-- Back to top Link -->
    <div id="to-top" class="main-bg"><span class="fa fa-chevron-up"></span></div>
    
</div>


<%= render "/home/js_files" %>