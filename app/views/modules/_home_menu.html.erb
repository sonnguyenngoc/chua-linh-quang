<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <ul class="nav navbar-nav navbar-right">

    <li><%= link_to "Trang Chủ", root_path, class: "home" %></li>
    
    <% ArticleCategory.get_all_parent_categories.each do |cat| %>
      
      <% if cat.children.count == 0 %>
        <li><%= link_to cat.name, category_path(category_id: cat.id, category_name: cat.url_friendly), class: cat.style %></li>
      <% else %>
        <li class="drop"><%= link_to cat.name, category_path(category_id: cat.id, category_name: cat.url_friendly), class: cat.style %>
          <ul class="dropdown">
            <% cat.children.order("position ASC").each do |child| %>
            <li><%= link_to child.name, category_path(category_id: child.id, category_name: child.url_friendly) %></li>
            <% end %>
            <% if cat.style == "category_5" %>
              <li><%= link_to "Thư Viện Hình Ảnh", gallery_picture_path %></li>
              <li><%= link_to "Thư Viện Nhạc", gallery_music_path %></li>
              <li><%= link_to "Thư Viện Video", gallery_video_path %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
      
    <% end %>
    
    <li><%= link_to "Liên Hệ", contact_path, class: "sport" %></li>

  </ul>

</div>