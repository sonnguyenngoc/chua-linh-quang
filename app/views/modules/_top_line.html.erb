<div class="top-line">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="top-line-list">
          <li><span class="time-now"><%= Time.now.in_time_zone("Asia/Bangkok").strftime("%A %d/%m/%Y / %H:%M") %></span></li>
          <% ArticleCategory.get_all_parent_categories.each do |cat| %>
          <li><%= link_to cat.name, category_path(category_id: cat.id, category_name: cat.url_friendly) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>