<section class="ticker-news">

  <div class="container">
    <div class="ticker-news-box">
      <span class="breaking-news">Tin Nóng</span>
      <span class="new-news">Mới</span>
      <ul id="js-news">
        <% Article.get_hot_news.each do |item| %>
        <li class="news-item"><span class="time-news"><%= item.created_at.in_time_zone("Asia/Bangkok").strftime("%d/%m/%Y %H:%M") %></span>  <%= link_to item.title, "" %> <%= truncate(strip_tags(item.content.html_safe), length: 60) %> </li>
        <% end %>
      </ul>
    </div>
  </div>

</section>