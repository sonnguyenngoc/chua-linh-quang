<footer>
  <div class="container">
    <div class="footer-widgets-part">
      <div class="row">
        <div class="col-md-3">
          <div class="widget posts-widget">
            <h1>PHẬT SỰ MỚI NHẤT</h1>
            <ul class="list-posts">
              <% Article.get_newest_category_1.each do |item| %>
              <li>
                <%= image_tag item.image_url.small_image, alt: "" %>
                <div class="post-content">
                  <%= link_to item.article_categories.first.name, category_path(category_id: item.article_categories.first.id, category_name: item.article_categories.first.url_friendly) %>
                  <h2><%= link_to item.title, post_detail_path(category_id: item.article_categories.first.id, category_name: item.article_categories.first.url_friendly, post_id: item.id, post_name: item.url_friendly) %></h2>
                  <ul class="post-tags">
                    <li><i class="fa fa-clock-o"></i><%= item.posted_at.strftime("%d/%m/%Y") %></li>
                  </ul>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
          <div class="widget social-widget">
            <h1>LIÊN KẾT</h1>
            <ul class="social-icons">
              <li><%= link_to '<i class="fa fa-facebook"></i>'.html_safe, "", class: "facebook", target: "_blank" %></li>
              <li><%= link_to '<i class="fa fa-google-plus"></i>'.html_safe, "", class: "google", target: "_blank" %></li>
              <li><%= link_to '<i class="fa fa-youtube"></i>'.html_safe, "", class: "youtube", target: "_blank" %></li>
            </ul>
          </div>
        </div>
        <div class="col-md-3">
          <div class="widget posts-widget">
            <h1>TIN NÓNG MỚI NHẤT</h1>
            <ul class="list-posts">
              <% Article.get_hot_news[0..2].each do |item| %>
              <li>
                <%= image_tag item.image_url.small_image, alt: "" %>
                <div class="post-content">
                  <%= link_to item.article_categories.first.name, category_path(category_id: item.article_categories.first.id, category_name: item.article_categories.first.url_friendly) %>
                  <h2><%= link_to item.title, post_detail_path(category_id: item.article_categories.first.id, category_name: item.article_categories.first.url_friendly, post_id: item.id, post_name: item.url_friendly) %></h2>
                  <ul class="post-tags">
                    <li><i class="fa fa-clock-o"></i><%= item.posted_at.strftime("%d/%m/%Y") %></li>
                  </ul>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-md-3">
          <div class="widget categories-widget">
            <h1>CHUYÊN MỤC</h1>
            <ul class="category-list">
              <% ArticleCategory.get_all_parent_categories.each do |item| %>
              <li>
                <a href="<%= category_path(category_id: item.id, category_name: item.url_friendly) %>"><%= item.name %> <span><%= item.count_posts_for_categories %></span></a>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-md-3">
          <div class="widget recent-comments-widget">
            <h1>LIÊN HỆ</h1>
            <ul class="">
              <li>
                <div class="recent-comment">
                  <div class="comment-content">
                    <p class="main-message"><%= Company.get_pagoda_info.name %></p>
                    <p><%= Company.get_pagoda_info.head_office_address %></p>
                    <span><a href="mailto:<%= Company.get_pagoda_info.email %>"><%= Company.get_pagoda_info.email %></span><br>
                    <span><a href="tel:<%= Company.get_pagoda_info.phone %>"><%= Company.get_pagoda_info.phone %></a></span>
                  </div>
                </div>
              </li>
            </ul>
          </div>
          <div class="widget flickr-widget">
            <h1>THƯ VIỆN ẢNH</h1>
            <ul class="flickr-list">
              <% Gallery.get_footer_newest_galleries.each do |item| %>
              <li><%= link_to image_tag(item.image_url.smallest_image, alt: ""), picture_detail_path(picture_id: item.id, picture_name: item.url_friendly) %></li>
              <% end %>
            </ul>
            <%= link_to "Xem thêm.....", gallery_picture_path %>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-last-line">
      <div class="row">
        <div class="col-md-4">
          <p>&copy; Copyrights <%= link_to "CHÙA LINH QUANG 2016", root_path, target: "_blank" %>. All rights reserved.</p>
        </div>
        <div class="col-md-8">
          <nav class="footer-nav">
            <ul>
              <% ArticleCategory.get_all_parent_categories.each do |cat| %>
              <li><%= link_to cat.name, category_path(category_id: cat.id, category_name: cat.url_friendly) %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</footer>