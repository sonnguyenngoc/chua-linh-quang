<!-- Main navbar -->
<%= render "/admin/main/main_navbar" %>
<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                <%= render "/admin/main/user_menu" %>
                <!-- /user menu -->

                <!-- Main navigation -->
                <%= render "/admin/main/main_menu" %>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->

        <!-- Main content -->
        <div class="content-wrapper">
        
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><span class="text-semibold"><%= t(:users) %></span></h4>
                    </div>
                </div>
            
                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to '<i class="icon-home2 position-left"></i>'.html_safe + t(:home), { controller: "main", action: "index" } %></li>
                        <li><a href="<%= admin_users_path %>"><%= t(:user) %></a></li>
                        <li class="active"><%= t(:users) %></li>
                    </ul>
                </div>
            </div>
            <!-- /page header -->
            
            <!-- Content area -->
            <div class="content">
            
                <!-- Basic datatable -->
                <div class="panel panel-flat">
                    
                    <div class="filter-box">
                        <%= form_for("", url: {controller: "users", action: "index"}, method: "get") do |f| %>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:areas) %></label>
                                        <div>
                                            <!--<%= select_tag(:area_id, options_from_collection_for_select(Area.all, :id, :name, :selected => params[:area_id]), include_blank: t(:all), class: "select") %>-->
                                            <select name="area_id" class="select" data-placeholder="<%= t(:related_areas) %>.....">
                                                <option value=""><%= t(:all) %></option>
                                                <% @areas.each do |item| %>
                                                    <optgroup value="" label="<%= item.name %>">
                                                        
                                                        <% item.children.each do |child| %>
                                                            <option <%= "selected" if params[:area_id] == child.id %> value="<%= child.id %>"><%= child.name %></option>
                                                        <% end %>
                                                    
                                                    </optgroup>
                                                <% end %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:sort_by) %></label>
                                        <div>
                                            <%= select_tag(:sort_by, options_for_select(User.sort_by, :selected => params[:sort_by]), class: "select") %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:sort_order) %></label>
                                        <div>
                                            <%= select_tag(:sort_order, options_for_select(User.sort_order, :selected => params[:sort_order]), class: "select") %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 pull-right">
                                    <div class="form-group">
                                        <label class="" ><%= t(:filter) %></label>
                                        <div class="input-group">
                                            <input type="text" name="keyword" class="form-control" placeholder="<%= t(:placeholder_filter) %>" value="<%= params[:keyword] %>">
                                            <a class="input-group-addon keyword_search_button"><i class="icon-search4"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    
                    <table class="table">
                        <thead>
                            <tr class="bg-teal-800">
                                <th><%= t(:user_name) %></th>
                                <th class="text-nowrap"><%= t(:user_group) %></th>
                                <th><%= t(:email) %></th>
                                <th><%= t(:phone_number) %></th>
                                <!--<th><%= t(:address) %></th>-->
                                <th><%= t(:created_at) %></th>
                                <th class="text-center"><%= t(:actions) %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |item| %>
                                <tr>
                                    <td>
                                        <%= link_to item.display_user_name, edit_admin_user_path(item) %>
                                    </td>
                                    <td>
                                        <%= item.user_group.name if !item.user_group.nil? %>
                                    </td>
                                    <td>
                                        <%= item.email %>
                                    </td>
                                    <td>
                                        <%= item.phone %>
                                    </td>
                                    <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                                    <td class="text-center">
                                        <% if can?(:update, item) or can?(:delete, item) %>
                                            <ul class="icons-list">
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <i class="icon-menu9"></i>
                                                    </a>
                    
                                                    <ul class="dropdown-menu dropdown-menu-right">
                                                        <% if can? :update, item %>
                                                            <li>
                                                                <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe + t(:edit), edit_admin_user_path(item) %>
                                                            </li>
                                                        <% end %>
                                                        <% if can? :delete, item %>
                                                            <li>
                                                                <%= link_to '<i class="icon-cross2"></i>'.html_safe + t(:delete), "#delete_user", url: admin_user_path(item) , class: "backend_delete_item" %>
                                                            </li>
                                                        <% end %>
                                                    </ul>
                                                </li>
                                            </ul>
                                        <% end %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <div class="dataTables_wrapper no-footer">
                        <div class="datatable-footer showed">
                            <div class="dataTables_info" ><%= page_entries_info @users %></div>
                            <div class="dataTables_paginate paging_simple_numbers">
                                <%= will_paginate @users, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /basic datatable -->
            
            </div>
            <!-- /content area -->
        
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<%= javascript_include_tag '/backend/assets/javascripts/datatables_manufacturers.js' %>
<!-- /theme JS files -->