<% if @company.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
            <% @company.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @company], html: {class: "form-horizontal", id: "validate_checking"} do |f| %>
    
    <div class="form-group">
        <%= f.label t(:logo), class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <div class="uploader bg-teal-400">
                <%= f.file_field :image_url, class: "file-styled", require: true %>
                <span class="action" style="-webkit-user-select: none;"><i class="icon-googleplus5"></i></span>
            </div>
            <span class="help-block">Accepted formats: gif, png, jpg.</span>
            <%= image_tag(@company.image_url, size: "180x110", class: "img-rouded") %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" >Tên Chùa <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:phone) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :phone, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:email) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :email, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:address) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :head_office_address, class: "form-control required" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_companies_path, class: "btn btn-danger"%>
    </div>
    
<% end %>